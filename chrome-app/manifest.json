{
    "name": "Amplitude",
    "short_name": "Amplitude",
    "description": "Winamp clone for Chrome browser!",
    "version": "2.0.0",
    "manifest_version": 2,
    "author": "Attila Varga <artit91@gmail.com>",
    "app": {
        "background": {
            "scripts": ["background.js"],
            "persistent": false
        }
    },
    "icons": { 
        "16": "ico16.png",
        "48": "ico48.png",
        "128": "ico128.png"
    },
    "minimum_chrome_version": "38.0.2125.101",
    "offline_enabled": true,
    "permissions": [
        {
            "fileSystem": ["write"]
        },
        "fullscreen",
        "alwaysOnTopWindows"
    ]
}